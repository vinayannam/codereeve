<div class="container mt-5 mb-5">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
    {{/if}}
    <form method="post" id="register" class="bg-white rounded shadow p-5" method="post" action="/admin/register">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationDefault01">First name</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="First name" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefault02">Last name</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Last name" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefaultUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    </div>
                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefaultPassword">Password</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultPassword" placeholder="Password" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationDefaultType">User Type</label>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="student-check" value="student" checked>
                    <label class="form-check-label" for="student-check">
                        Student
                    </label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="faculty-check" value="faculty">
                    <label class="form-check-label" for="faculty-check">
                        Faculty
                    </label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-3">
                <label for="validationDefaultYear">Year</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultYear" placeholder="Year of Enrolment" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationDefaultType">Batch</label>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="section" id="csc-check" value="csc" checked>
                    <label class="form-check-label" for="csc-check">
                        CSC
                    </label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="section" id="cse-check" value="cse">
                    <label class="form-check-label" for="cse-check">
                        CSE
                    </label>
                </div>
            </div>
            <div class="col-md-12 mb-3 ">
                <label for="validationDefaultYear">Subjects</label>
                <div class="form-row form-subjects">
                <div class="col-md-12 mb-3 btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn btn-secondary" onclick="addNew()">+</button>
                    <button type="button" class="btn btn-secondary" onclick="removeOne()">-</button>
                </div>
                <div class="col-md-12 mb-3 input-group">
                    <input type="text" class="form-control" name="subject" id="validationDefaultSubject" placeholder="Subject" aria-describedby="inputGroupPrepend2" required>
                </div>
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</div>