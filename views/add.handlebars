<div class="container mt-5 mb-5">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger mt-3 text-center">{{msg}}</div>
        {{/each}}
        {{/if}}
        {{#if success_msg}}
        <div class="alert alert-success mt-3 text-center">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
        <div class="alert alert-danger mt-3 text-center">{{error_msg}}</div>
    {{/if}}
    <form id="register" class="bg-white rounded shadow p-5" method="post" action="/admin/register">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationDefault01">First name</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="First name" name="firstname" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefault02">Last name</label>
                <input type="text" class="form-control" id="validationDefault02" placeholder="Last name" name="lastname" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefaultUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    </div>
                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" name="username" required>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationDefaultPassword">Password</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultPassword" placeholder="Password" aria-describedby="inputGroupPrepend2" name="password" required>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationDefaultType">User Type</label>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="user" id="student-check" value="student" checked>
                    <label class="form-check-label" for="student-check">
                        Student
                    </label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="user" id="faculty-check" value="faculty">
                    <label class="form-check-label" for="faculty-check">
                        Faculty
                    </label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-3">
                <label for="year">Year of Enrolment</label>
                    <select class="form-control" id="year" name="year" required>
                        {{#years}}
                        <option>{{year}}</option>
                        {{/years}}
                    </select>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationDefaultType">Batch</label>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="section" id="csc-check" value="csc" checked>
                    <label class="form-check-label" for="csc-check">
                        CSC
                    </label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="section" id="cse-check" value="cse">
                    <label class="form-check-label" for="cse-check">
                        CSE
                    </label>
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</div>